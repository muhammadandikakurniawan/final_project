@model Recruitment.Models.SkillModels
@{
    ViewBag.Title = "Edit";
}

<div class="container">
    <a href="~/Skill" class="btn btn-primary">Back</a>
    <h2><center>UPDATE SKILL</center></h2>
    <hr />
    <div class="row">
        <div class="col-lg-6">
            @using (Html.BeginForm("Edit", "Skill", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="SkillId">Skill Id</label>
                    @Html.TextBoxFor(model => model.SkillId, new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.SkillId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="SkillName">Skill Name</label>
                    @Html.TextBoxFor(model => model.SkillName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SkillName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Update Skill" class="btn btn-success" />
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval");
}


