@model IEnumerable<Recruitment.Models.CandidateJoin>
@using Recruitment.Models;
@{
    ViewBag.Title = "JobExperience";
    Layout = null;
}


@*<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>*@
<script src="~/Scripts/jquery-1.12.4.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('.launch-modal').click(function () {
            var idex = $(this).data('id');
            var benefit = $(this).data('benefit');
            var skill = $(this).data('skill');
            var job = $(this).data('job');
            $(".modal-body .panel-body #benefit").val(benefit);
            $(".modal-body .panel-body #skill").val(skill);
            $(".modal-body .panel-body #job").val(job);
            $('#myModal').modal({
                backdrop: 'static'
            });
        });
    });
</script>

<style type="text/css">
    .bs-example {
        margin: 20px;
    }
</style>
<br />
<a class="btn btn-primary pull-right " href="~/experience/AddExperience">Add Experience</a>
<br />
<br />
@*<div class="panel panel-default">*@
<div class="panel-heading"></div>
<div class="panel-body">
    <table class="table table-bordered table-striped">
        <tr>
            <td>Position</td>
            <td>Company Name</td>
            <td>Period</td>
            <td>Last Salary</td>
            <td>Button Action</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Position.Nama</td>
                <td>@item.Experience.Industri</td>
                <td>@item.Experience.StartDate.ToShortDateString() <h6>-</h6>@item.Experience.EndDate.ToShortDateString()</td>
                <td>Rp. @item.Experience.Salary.ToString("n0")</td>
                <td>
                    <a class="btn btn-warning btn-sm" href="/experience/EditExperiences/@item.Experience.ExperienceId">Edit</a>
                    <a id="Detail" class="launch-modal" data-toggle="modal" data-id="@item.Experience.ExperienceId" data-benefit="@item.Experience.Benefit" data-skill="@item.Experience.Skill" data-job="@item.Experience.JobDesc">
                        <button type="button" class="btn btn-lg btn-info btn-sm" value="Detail">Details</button>
                    </a>
                </td>
            </tr>

        }
    </table>
</div>
@*</div>*@

<div class="bs-example">
    <!-- Button HTML (to Trigger Modal) -->
    <!-- Modal HTML -->
    <div id="myModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Details</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <div class="panel panel-danger">
                                <div class="panel-heading">
                                    <h4>Benefit</h4>
                                </div>
                                <div class="panel-body">
                                    <textarea id="benefit" readonly="readonly" style="resize:none;width:200px;height:120px;"></textarea>
                                </div>

                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <div class="panel panel-warning">
                                <div class="panel-heading">
                                    <h4>Skill</h4>
                                </div>
                                <div class="panel-body">
                                    <textarea id="skill" readonly="readonly" style="resize:none;width:200px;height:120px;"></textarea>
                                </div>

                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="panel panel-success">
                                <div class="panel-heading">
                                    <h4>Job Description</h4>
                                </div>
                                <div class="panel-body">
                                    <textarea id="job" readonly="readonly" style="resize:none;width:525px;height:150px;"></textarea>
                                </div>

                            </div>
                        </div>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>



