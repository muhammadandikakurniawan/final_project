@model Recruitment.Models.RoleModels
@{
    ViewBag.Title = "Edit";
}

<div class="container">
    <a href="/Role" class="btn btn-primary">Back</a>
    <h2><center>UPDATE ROLE</center></h2>
    <hr />
    <div class="row">
        <div class="col-lg-6">
            @using (Html.BeginForm("Edit", "Role", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="RoleId">Role Id</label>
                    @Html.TextBoxFor(model => model.RoleId, new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="RoleName">Role Name</label>
                    @Html.TextBoxFor(model => model.RoleName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Update Role" class="btn btn-success" />
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval");
}


